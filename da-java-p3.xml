<?xml version="1.0" encoding="UTF-8"?>
<project name="da-java-p3" default="all">
  
  
  <property file="da-java-p3.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.logging.log4j:log4j-api:2.11.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/logging/log4j/log4j-api/2.11.1/log4j-api-2.11.1.jar"/>
  </path>
  
  <path id="library.maven:_org.apache.logging.log4j:log4j-core:2.11.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apache/logging/log4j/log4j-core/2.11.1/log4j-core-2.11.1.jar"/>
  </path>
  
  <path id="library.maven:_org.apiguardian:apiguardian-api:1.0.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.jupiter:junit-jupiter-api:5.4.0-m1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.4.0-M1/junit-jupiter-api-5.4.0-M1.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-commons:1.4.0-m1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.4.0-M1/junit-platform-commons-1.4.0-M1.jar"/>
  </path>
  
  <path id="library.maven:_org.opentest4j:opentest4j:1.1.1.classpath">
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.1.1/opentest4j-1.1.1.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module DA-Java-P3 -->
  
  <dirname property="module.da-java-p3.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.da-java-p3" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.da-java-p3" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.da-java-p3" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.da-java-p3" value="-encoding UTF-8 -source 7 -target 1.7 ${compiler.args}"/>
  
  <property name="da-java-p3.output.dir" value="${module.da-java-p3.basedir}/target/classes"/>
  <property name="da-java-p3.testoutput.dir" value="${module.da-java-p3.basedir}/target/test-classes"/>
  
  <path id="da-java-p3.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="da-java-p3.module.production.classpath">
    <path refid="${module.jdk.classpath.da-java-p3}"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-api:2.11.1.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-core:2.11.1.classpath"/>
    <pathelement location="${basedir}/../../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_171.jdk/Contents/Home/jre/lib/ext/jfxrt.jar"/>
  </path>
  
  <path id="da-java-p3.runtime.production.module.classpath">
    <pathelement location="${da-java-p3.output.dir}"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-api:2.11.1.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-core:2.11.1.classpath"/>
    <pathelement location="${basedir}/../../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_171.jdk/Contents/Home/jre/lib/ext/jfxrt.jar"/>
  </path>
  
  <path id="da-java-p3.module.classpath">
    <path refid="${module.jdk.classpath.da-java-p3}"/>
    <pathelement location="${da-java-p3.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-api:2.11.1.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-core:2.11.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.4.0-m1.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.0.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.1.1.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.4.0-m1.classpath"/>
    <pathelement location="${basedir}/../../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_171.jdk/Contents/Home/jre/lib/ext/jfxrt.jar"/>
  </path>
  
  <path id="da-java-p3.runtime.module.classpath">
    <pathelement location="${da-java-p3.testoutput.dir}"/>
    <pathelement location="${da-java-p3.output.dir}"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-api:2.11.1.classpath"/>
    <path refid="library.maven:_org.apache.logging.log4j:log4j-core:2.11.1.classpath"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.4.0-m1.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.0.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.1.1.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.4.0-m1.classpath"/>
    <pathelement location="${basedir}/../../../../../Library/Java/JavaVirtualMachines/jdk1.8.0_171.jdk/Contents/Home/jre/lib/ext/jfxrt.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.da-java-p3">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.da-java-p3">
    <patternset refid="excluded.from.module.da-java-p3"/>
  </patternset>
  
  <path id="da-java-p3.module.sourcepath">
    <dirset dir="${module.da-java-p3.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="da-java-p3.module.test.sourcepath">
    <dirset dir="${module.da-java-p3.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.da-java-p3" depends="compile.module.da-java-p3.production,compile.module.da-java-p3.tests" description="Compile module DA-Java-P3"/>
  
  <target name="compile.module.da-java-p3.production" depends="register.custom.compilers" description="Compile module DA-Java-P3; production classes">
    <mkdir dir="${da-java-p3.output.dir}"/>
    <javac2 destdir="${da-java-p3.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.da-java-p3}/javac">
      <compilerarg line="${compiler.args.da-java-p3}"/>
      <bootclasspath refid="da-java-p3.module.bootclasspath"/>
      <classpath refid="da-java-p3.module.production.classpath"/>
      <src refid="da-java-p3.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.da-java-p3"/>
    </javac2>
    
    <copy todir="${da-java-p3.output.dir}">
      <fileset dir="${module.da-java-p3.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.da-java-p3.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.da-java-p3.tests" depends="register.custom.compilers,compile.module.da-java-p3.production" description="compile module DA-Java-P3; test classes" unless="skip.tests">
    <mkdir dir="${da-java-p3.testoutput.dir}"/>
    <javac2 destdir="${da-java-p3.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.da-java-p3}/javac">
      <compilerarg line="${compiler.args.da-java-p3}"/>
      <bootclasspath refid="da-java-p3.module.bootclasspath"/>
      <classpath refid="da-java-p3.module.classpath"/>
      <src refid="da-java-p3.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.da-java-p3"/>
    </javac2>
    
    <copy todir="${da-java-p3.testoutput.dir}">
      <fileset dir="${module.da-java-p3.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.da-java-p3" description="cleanup module">
    <delete dir="${da-java-p3.output.dir}"/>
    <delete dir="${da-java-p3.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.da-java-p3" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.da-java-p3" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>